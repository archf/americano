    key <AB04> { [            v,            V,  dead_circumflex,      NoSymbol ] };
    key <AB05> { [            b,            B,      b,       B ] };
    key <AB06> { [            n,            N,          ntilde,           Ntilde ] };
    key <AB07> { [            j,            J,      NoSymbol,       NoSymbol ] };
    key <AB08> { [        comma,         less,    dead_cedilla,       NoSymbol ] };
    key <AB09> { [       period,      greater,   dead_abovedot,       NoSymbol ] };
    key <AB10> { [        slash,     question,    questiondown,       NoSymbol ] };

    // modifier_keys
    //key <TAB>  { [        Tab,  ISO_Left_Tab,            Alt_L+Tab,        ISO_Left_Tab ] }; // AltGr+Tab is Compose
    // key <TAB>  { [        Tab,  ISO_Left_Tab,            Tab,         Multi_key ] }; // AltGr+Tab is Compose
    key <LSGT> { [        minus,   underscore,          endash,           emdash ] };
    key <SPCE> { [        space,        space,           space,     nobreakspace ] };
    key <ESC>  { [     Caps_Lock,     Caps_Lock,     Caps_Lock,      Caps_Lock ] };
    key <CAPS> { [     Control_L,     Control_L,     Control_L,      Control_L ] };
    key <LCTL> { [        Escape,        Escape,        Escape,         Escape ] };

    // option "lv3:ralt_alt"
